<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="DiscountView">
        <attr name="product_text" format="string" />
        <attr name="product_text_size" format="dimension" />
        <attr name="product_text_color" format="color" />
        <attr name="price_text" format="string" />
        <attr name="price_text_size" format="dimension" />
        <attr name="price_text_color" format="color" />
        <attr name="tag_text" format="string" />
        <attr name="tag_text_size" format="dimension" />
        <attr name="tag_text_color" format="color" />
        <attr name="tag_background_color" format="color" />
    </declare-styleable>

    <declare-styleable name="TitleBarView">
        <attr name="tbvLeftImageSrc" format="reference" />
        <attr name="tbvRightImageSrc" format="reference" />
        <attr name="tbvTitleText" format="string" />
        <attr name="tbvTitleTextSize" format="dimension" />
        <attr name="tbvTitleTextFont" format="string" />
        <attr name="tbvTitleTextColor" format="color" />
        <attr name="tbvRightText" format="string" />
        <attr name="tbvRightTextSize" format="dimension" />
        <attr name="tbvRightTextFont" format="string" />
        <attr name="tbvRightTextColor" format="color" />
    </declare-styleable>

    <declare-styleable name="EntranceView">
        <attr name="evLeftImageSrc" format="reference" />
        <attr name="evRightArrowSrc" format="reference" />
        <attr name="evPointSrc" format="reference" />
        <attr name="evText" format="string" />
        <attr name="evTextColor" format="color" />
        <attr name="evTextSize" format="dimension" />
        <attr name="evTextFont" format="string" />
        <attr name="evRightText" format="string" />
        <attr name="evRightTextSize" format="dimension" />
        <attr name="evRightTextFont" format="string" />
        <attr name="evRightTextColor" format="color" />
        <attr name="evDividerLine" format="boolean" />
        <attr name="evDividerLineColor" format="color" />
    </declare-styleable>

    <declare-styleable name="InputTextView">
        <attr name="itvLeftImageSrc" format="reference" />
        <attr name="itvRightImageSrc" format="reference" />
        <attr name="itvHintText" format="string" />
        <attr name="itvHintTextColor" format="color" />
        <attr name="itvText" format="string" />
        <attr name="itvTextColor" format="color" />
        <attr name="itvTextSize" format="dimension" />
        <attr name="itvTextFont" format="string" />
        <attr name="itvErrorMessage" format="string" />
        <attr name="itvErrorMessageTextColor" format="color" />
        <attr name="itvErrorMessageTextSize" format="dimension" />
        <attr name="itvErrorMessageVisibility">
            <enum name="visible" value="0" />
            <enum name="invisible" value="1" />
            <enum name="gone" value="2" />
        </attr>
    </declare-styleable>

    <declare-styleable name="SubmitButtonView">
        <attr name="sbvShowLoading" format="boolean" />
        <attr name="sbvText" format="string" />
        <attr name="sbvTextColor" format="color" />
        <attr name="sbtTextSize" format="dimension" />
        <attr name="sbvTextFont" format="reference" />
    </declare-styleable>

    <declare-styleable name="SwitchView">
        <attr name="android:checked" />
        <attr name="svText" format="string"/>
        <attr name="svTextColor" format="color"/>
        <attr name="svTextSize" format="dimension"/>
        <attr name="svTextFont" format="reference"/>
        <attr name="svIsChecked" format="boolean" />
        <attr name="svDividerLine" format="boolean" />
        <attr name="svDividerLineColor" format="color" />
    </declare-styleable>
</resources>