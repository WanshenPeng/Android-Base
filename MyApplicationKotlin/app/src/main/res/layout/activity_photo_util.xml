<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".picture.PhotoUtilActivity">

    <Button
        android:id="@+id/btn_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="take photo"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btn_take_photo_crop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="take photo and crop"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btn_gallery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="choose photo"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btn_choose_photo_crop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="choose photo and crop"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btn_compress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="choose photo and compress"
        android:textAllCaps="false" />

    <ImageView
        android:id="@+id/img_show"
        android:layout_width="@dimen/dp_300"
        android:layout_height="@dimen/dp_300" />
</LinearLayout>