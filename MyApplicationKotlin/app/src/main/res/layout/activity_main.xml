<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="24dp"
        android:text="年龄"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:text="姓名"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="92dp"
        android:hint="请输入姓名"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView2"
        app:layout_constraintStart_toEndOf="@+id/textView2" />

    <TextView
        android:id="@+id/age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="92dp"
        android:hint="请输入年龄"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView3"
        app:layout_constraintStart_toEndOf="@+id/textView3" />

    <Button
        android:id="@+id/input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"
        android:onClick="intoInputActivity"
        android:text="输入界面"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/name" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/age">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/age">

            <Button
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="intoBaseWidgetActivity"
                android:text="BaseWidgetActivity" />

            <Button
                android:id="@+id/lottie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="intoConnectionFailedActivity"
                android:text="lottie"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/async_task_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="async_task"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/handler_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="handler"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/button5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="intoAccessActivity"
                android:text="Access" />

            <Button
                android:id="@+id/permission"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="intoConnectionFailedActivity"
                android:text="permission"
                android:textAllCaps="false" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="intoWifiTestActivity"
                android:text="wifiTest"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/my_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="intoMyViewActivity"
                android:text="myView"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/button4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="intoCreateAccessCodeActivity"
                android:text="connection_failed" />

            <Button
                android:id="@+id/my_view2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="intoMyViewActivity"
                android:text="myView2"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/button3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="intoConnectionFailedActivity"
                android:text="connection_failed" />

            <Button
                android:id="@+id/service_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="intoMyServiceActivity"
                android:text="myService"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/web_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="intoWebViewActivity"
                android:text="webView"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/camara_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="camara"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_compose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Compose UI"
                android:textAllCaps="false" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>